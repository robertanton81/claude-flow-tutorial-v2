{
  "name": "production-realtime-collaboration",
  "version": "1.0.0",
  "description": "Production-ready real-time collaboration platform",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:load": "artillery run tests/load/websocket-load.yml",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t realtime-collaboration .",
    "docker:run": "docker-compose up -d",
    "migrate": "knex migrate:latest",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "socket.io-redis": "^6.1.1",
    "redis": "^4.6.10",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "joi": "^17.12.0",
    "uuid": "^9.0.1",
    "yjs": "^13.6.10",
    "y-websocket": "^1.5.0",
    "y-protocols": "^1.0.6",
    "prosemirror-model": "^1.19.4",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-collab": "^1.3.1",
    "automerge": "^2.1.10",
    "sharedb": "^3.0.0",
    "sharedb-mongo": "^3.0.1",
    "sharedb-redis-pubsub": "^3.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "rate-limiter-flexible": "^3.0.8",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/socket.io": "^3.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@playwright/test": "^1.40.1",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "socket.io-client": "^4.7.4",
    "artillery": "^2.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  }
}