{
  "name": "production-devops-dashboard",
  "version": "1.0.0",
  "description": "Production-ready DevOps monitoring and management dashboard",
  "main": "dist/src/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "k6 run tests/load/dashboard-load.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t devops-dashboard .",
    "docker:run": "docker-compose up -d",
    "migrate": "knex migrate:latest",
    "setup:monitoring": "node scripts/setup-monitoring.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "socket.io": "^4.7.4",
    "redis": "^4.6.10",
    "prometheus-client": "^15.1.0",
    "winston": "^3.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.12.0",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "@kubernetes/client-node": "^0.20.0",
    "dockerode": "^4.0.0",
    "aws-sdk": "^2.1508.0",
    "@google-cloud/monitoring": "^4.0.0",
    "azure-monitor": "^0.5.2",
    "influxdb-client": "^1.33.2",
    "elasticsearch": "^16.7.3",
    "pg": "^8.11.3",
    "knex": "^3.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "node-ssh": "^13.1.0",
    "ping": "^0.4.4",
    "systeminformation": "^5.21.20",
    "node-schedule": "^2.1.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.4",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  }
}